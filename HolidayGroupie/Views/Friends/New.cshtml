@model HolidayGroupie.ViewModels.NewFriendViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a Friend</h2>

@using (Html.BeginForm("Save", "Friends"))
{
    //object returned will be disposed and render the
    //closing html tag
    //special markup for modern and responsive forms
    //wrap each input field with div form-group
    <div class="form-group">
        @Html.LabelFor(f => f.Friend.Name)
        @Html.TextBoxFor(f => f.Friend.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(f => f.Friend.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.Friend.LastName)
        @Html.TextBoxFor(f => f.Friend.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(f => f.Friend.LastName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Friend.MembershipTypeId)
        @Html.DropDownListFor(m => m.Friend.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(f => f.Friend.MembershipType)
    </div>
    @Html.HiddenFor(m => m.Friend.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
